@{
    ViewData["Title"] = "Login";
    Layout = "";
}



<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Login</title>
    <link href="~/css/devextreme/bootstrap.css" rel="stylesheet" />
    <link href="~/css/devextreme/dx.common.css" rel="stylesheet" />
    <link href="~/css/devextreme/dx.carmine.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />

    <script src="~/js/devextreme/jquery.js"></script>
    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
</head>

<body>
    <div class="signin-page">
        <div class="webname"></div>
        <div class="content">
            <form id="form" method="post" action="/Login">
                <input type="hidden" name="host" value="" />
                <div class="form-group">
                    <div class="lable">Tài khoản</div>
                    <div class="input-icon">
                        <script>DevExpress.config({"serverDecimalSeparator":"."});DevExpress.aspnet.setTemplateEngine();</script><div id="devextreme0"></div>
                        <script>jQuery(function ($) { $("#devextreme0").dxTextBox({ "name": "Username", "inputAttr": { "id":"Username"}});});</script>
                    </div>
                </div>
                <div class="form-group">
                    <div class="lable">Mật khẩu</div>
                    <div class="input-icon">
                        <div id="devextreme1"></div>
                        <script>jQuery(function ($) { $("#devextreme1").dxTextBox({ "name": "password", "mode": "Password", "inputAttr": { "id":"Password"}});});</script>
                    </div>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <div id="devextreme2"></div>
                    <script>jQuery(function($){$("#devextreme2").dxButton({"text":"LOGIN","useSubmitBehavior":true,"type":"default","elementAttr":{"class":"btn-style"}});});</script>
                </div>

                <h3 class="text_login">
                    @TempData["LoginMessage"]
                </h3>

                <div class="signup-link">
                    Bạn chưa có tài khoản? <a href="@Url.Action("SignUp", "User")">Đăng ký ngay</a>
                </div>
            </form>

        </div>
    </div>
</body>
</html>